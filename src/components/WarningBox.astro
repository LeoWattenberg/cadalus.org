---
import { mdiAlert, mdiAlertCircle, mdiInformation } from '@mdi/js';
export interface WarningBoxProps {
  message: string;
  type?: "error" | "warning" | "info";
}

const { message, type = "warning" } = Astro.props as WarningBoxProps;
const className =
  type === "error"
    ? "warning-box error"
    : type === "info"
      ? "warning-box info"
      : "warning-box warning";
const icons: Record<string, string> = {
  error: mdiAlert,
  warning: mdiAlertCircle,
  info: mdiInformation
};
---
<div class={className}>
  {type && <svg class="icon" viewBox="0 0 24 24"><path d={icons[type]} /></svg>}
  {message}
</div>

<style>
  .warning-box {
    padding: 1rem;
    border-radius: 4px;
    margin: 1rem 0;
    font-size: 1rem;
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
  }
  .warning-box.warning {
    background-color: #fff3cd;
    color: #856404;
    border: 1px solid #ffeeba;
  }
  .warning-box.error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
  .warning-box.info {
    background-color: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
  }
  .icon {
    width: 1.2rem;
    height: 1.2rem;
    margin-right: 0.5rem;
    fill: currentColor;
  }
</style>
