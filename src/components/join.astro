---
const joinContent = {
  title: "Join Cadalus",
  description: "At the moment, Cadalus is still looking for partners to found the company. If you'd like to be one of the co-founders / founding members, please contact me.",
  buttons: [
    {
      text: "Contact Us",
      href: "mailto:cadalus@leoxd.dk",
      class: "primary-btn"
    }
  ],
  footer: {
    text: "Impressum",
    href: "https://kw.media/impressum/"
  }
};
---

<section class="join-contact">
  <div class="join-content">
    <h2>{joinContent.title}</h2>
    <p class="join-description">
      {joinContent.description}
    </p>
    <div class="button-group">
      {joinContent.buttons.map(button => (
        <a href={button.href}>
          <button class={button.class}>{button.text}</button>
        </a>
      ))}
    </div>
    <p class="small">
      <a href={joinContent.footer.href}>{joinContent.footer.text}</a>
    </p>
  </div>
</section>

<style>
  .join-contact {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .join-content {
    text-align: center;
  }

  .join-description {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .button-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  button {
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  button:hover {
    transform: translateY(-2px);
  }

  .primary-btn {
    background-color: #007bff;
    color: white;
    border: 2px solid #007bff;
  }

  .small {
    font-size: smaller;
    margin-top: 2rem;
  }
</style>