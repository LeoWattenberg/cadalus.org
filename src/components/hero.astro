---
const heroContent = {
  title: "Welcome to Cadalus",
  description: "A European cooperative alternative to architectural CAD and BIM programs",
  buttons: [
    {
      text: "Learn more",
      href: "#features",
      class: "primary-btn"
    },
    {
      text: "Get involved",
      href: "#roadmap",
      class: "secondary-btn"
    }
  ]
};
---

<section class="hero">
  <div class="hero-content">
    <h1>{heroContent.title}</h1>
    <p class="hero-description">
      {heroContent.description}
    </p>
    <div class="button-group">
      {heroContent.buttons.map(button => (
        <a href={button.href}>
          <button class={button.class}>{button.text}</button>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .hero {
    height: 33vh;
    min-height:20rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #1c4b82;
    background-image: repeating-linear-gradient(
      45deg,
      #1c4b82,
      #1c4b82 20px,
      rgba(255, 255, 255, 0.1) 20px,
      rgba(255, 255, 255, 0.1) 40px
    );
    border-bottom: 16px solid #2f598c;
  }

  .hero-content {
    text-align: center;
  }

  .hero-description {
    color: white;
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 2rem;
    color: white;
  }

  .button-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  button {
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  button:hover {
    transform: translateY(-2px);
  }

  .primary-btn {
    background-color: #007bff;
    color: white;
    border: 2px solid #007bff;;
  }

  .secondary-btn {
    background-color: transparent;
    color: #007bff;
    border: 2px solid #007bff;
  }
</style>
