<style>
  .hero {
    height: 50vh;
    min-height:16rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    background-image: none;
  }

  .hero-content {
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 2rem;
    color: #333;
  }

