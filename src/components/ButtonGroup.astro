---
import type { ButtonProps } from './Button.astro';

interface Props {
  buttons: ButtonProps[];
}

const { buttons } = Astro.props as Props;
import Button from './Button.astro';
---
<div class="button-group">
  {buttons.map(button => (
    <Button
      text={button.text}
      href={button.href}
      variant={button.variant}
    />
  ))}
</div>

<style>
  .button-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
</style>
